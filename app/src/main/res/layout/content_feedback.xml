<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/default_ui_margin_large"
    android:paddingLeft="@dimen/default_ui_margin_large"
    android:paddingRight="@dimen/default_ui_margin_large"
    android:paddingTop="@dimen/default_ui_margin_large"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.windcity.yefeng.yfsms.presentation.feedback.FeedbackActivity"
    tools:showIn="@layout/activity_feedback">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_contact_way"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_contact_way"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|left"
            android:hint="@string/hint_contact_way" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_contact_way">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:hint="@string/hint_feedback"
            android:minLines="4" />
    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>
