<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/default_ui_margin_small">

    <EditText
        android:id="@+id/et_send_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_ui_margin_small"
        android:layout_weight="1.0"
        android:background="@drawable/bg_white_rounded_rectangle_padding_8"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:hint="@string/hint_write_sms"
        android:inputType="textMultiLine"
        android:maxLines="4"
        android:minHeight="@dimen/default_button_height" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_send"
        android:layout_width="@dimen/default_button_height"
        android:layout_height="@dimen/default_button_height"
        android:layout_margin="@dimen/default_ui_margin_small"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_send_white_24dp" />
</LinearLayout>